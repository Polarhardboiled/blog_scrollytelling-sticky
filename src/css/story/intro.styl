.intro
	margin 0 auto
	padding 3rem 1rem 1rem 1rem
	background-color $primary
	margin-bottom 3rem

	.intro-inner
		padding 0 1rem
		max-width $column-width
		margin 0 auto

	&__hed
		padding-top 5rem
		font-weight bold
		margin 0
		set-type-size('xx-large', true)
		+mq('bp-2')
			set-type-size('xxx-large', true)		
	&__byline
		set-type-size('small', true)
	&__date 
		set-type-size('small', true)
		
	&__dek
		margin 0
		padding-top 1.5rem
		text-align left
		set-type-size('medium', true)
	
	&__info
		margin 0
		display flex
		justify-content space-between